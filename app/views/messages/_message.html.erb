<div class="message" id="message-<%= message.id %>">
  <div class="ui comments">
    <div class="comment">
      <a class="avatar">
        <% if message.user.image? %>
          <%= image_tag message.user.image_url %>
        <% else %>
          <%= image_tag("default.jpg") %>
        <% end %>
      </a>
      <div class="content">
        <a class="author"><%= message.user.name %></a>
        <div class="metadata">
          <span class="date"><%= time_ago_in_words(message.created_at) %></span>
        </div>
        <div class="text"><%= simple_format(message.content) %></div>
      </div>
    </div>
  </div>
  <hr>
</div>
