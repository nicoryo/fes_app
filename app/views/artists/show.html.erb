<% provide(:title, "Artist") %>

<h2><%= @artist.name %></h2></ br>
<p><% @artist.id %></p>
<p><% @artist.icon %></p>
<% if @artist.icon.nil?%>
  <%= image_tag @artist.image["icon"]%>
<%else%>
  <%= image_tag("default.jpg")%>
<%end%>

<%= render 'favs/fav_button' %>

<% if user_signed_in? %>
  <h5>follower</h5>
    <% @user_Favorited.each do |user| %>
    <a href="/user/<%= user.id %>"><%= user.name %></a>
  <hr>
  <% end %>
<% end %>
<p><%= link_to "アーティスト一覧に戻る", artists_path %></p>
