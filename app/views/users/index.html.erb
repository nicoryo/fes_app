<div class="container">
  <div class="jumbotron m-3">
    <h1 class="display-4">Users#index</h1>
    <hr class="my-4">


<% if user_signed_in? %>
<h2>Hello <%= current_user.email %></h2>
  <% @users.each do |u| %>
  <p><a href="/users/<%= u.id %>"><%= u.email %>さん</a></p>
  <hr>
  <% end %>
  <% @artists.each do |a| %>
    <p><a href="/artists/<%= a.id %>"><%= a.name %><%= a.icon %></a></p>
    <hr>
  <% end %>
  <%= link_to "ログアウト", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "ユーザーを登録する", new_user_registration_path %>
  <br>
  <%= link_to "ログインする", new_user_session_path %>
  <% @artists.each do |a| %>
  <p><a href="/artists/<%= a.id %>"><%= a.name %>さん</a></p>
  <hr>
  <% end %>
<% end %>

<p>Find me in app/views/users/index.html.erb</p>
