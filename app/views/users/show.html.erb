<% provide(:title, "User home") %>
<% if @user.id == current_user.id %>
  <h1>My Page</h1>
<% else %>
  <h1><%= @user.name %> のPage</h1>
<% end %>

<div class="ui small image">
  <% if @user.image_url.nil?%>
    <%= image_tag("default.jpg")%>
  <%else%>
    <%= image_tag (@user.image_url)%>
  <%end%>
</div>
<% if @user.id == current_user.id %>
  <h3>いいねしているアーティスト</h3>
  <% @userFavorites.each do |artist| %>
    <a href="/artists/<%= artist.id %>"><%= artist.name %></a>
    <hr>
  <% end %>

  <h5>follower</h5>
  <% @userFollwers.each do |user| %>
    <p><strong><a href="/users/<%= user.id %>"><%= user.name %>さん</a></strong></p>
  <% end %>
  <h5>following</h5>
  <% @userFollowings.each do |user| %>
    <p><strong><a href="/users/<%= user.id %>"><%= user.name %>さん</a></strong></p>
  <% end %>
    <%= @user.following.count %>

<% else %>
  <% unless current_user.following?(@user) %>
    <%= render 'relationships/follow_button', user: @user %>
  <% else %>
    <%= render 'relationships/follow_button', user: @user %>
      <% unless current_user.matching?(@user) %>
        <% if @isRoom == true %>
          <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, :value=> @user.id %>
            <% end %>
            <%= f.submit "チャットを始める",class: "ui positive basic button" %>
            <i class="comments icon"></i>
          <% end %>
        <% end %>

      <% else %>
    <% end %>
  <% end %>
<% end %>
