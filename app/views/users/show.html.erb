<h1>Users#show</h1>

<h2><%= @user.name %>さん</h2>
<%= image_tag @user.image_url if @user.image? %>

<% if @user.id == current_user.id %>
  <% @user.artists.each do |artist| %>
  <a href="/artists/<%= artist.id %>"><%= artist.artist_name %></a>
  <hr>
  <% end %>

  <h3>いいねしているアーティスト</h3>
  <% @user.faved_artists.each do |artist| %>
    <%= artist.user.email %>
    <%= artist.content %>
  <% end %>



<% else %>
  <% @user.artists.each do |artist| %>
  <a href="/artists/<%= artist.id %>"><%= artist.artist_name %></a>
  <hr>
  <% end %>
  <% unless current_user.following?(@user) %>

　   <%= render 'relationships/follow_button', user: @user %>
  <% else %>

    <%= render 'relationships/follow_button', user: @user %>
    <% if @isRoom == true %>
      <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
    <% else %>
      <%= form_for @room do |f| %>
        <%= fields_for @entry do |e| %>
          <%= e.hidden_field :user_id, :value=> @user.id %>
        <% end %>
        <%= f.submit "チャットを始める" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= link_to 'プロフィール変更', edit_user_registration_path %><hr>
<%= link_to "ユーザー一覧に戻る", users_path %>


